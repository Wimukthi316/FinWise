<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#BEEBE2" />
            <corners android:radius="8dp" />
            <padding android:left="12dp" android:right="12dp" android:top="8dp" android:bottom="8dp" />
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E8F5E9" /> <!-- Light green color when pressed -->
            <corners android:radius="8dp" />
            <padding android:left="12dp" android:right="12dp" android:top="8dp" android:bottom="8dp" />
        </shape>
    </item>

    <!-- Default/unselected state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5" /> <!-- Light gray background -->
            <corners android:radius="8dp" />
            <stroke android:color="#E0E0E0" android:width="1dp" /> <!-- Light border -->
            <padding android:left="12dp" android:right="12dp" android:top="8dp" android:bottom="8dp" />
        </shape>
    </item>
</selector>